<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//t[1]" position="replace">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <style type="text/css">
                @font-face {
font-family: 'Calibri';
src: url('/gdi_report/static/font/Times_New_Roman.ttf')  format('truetype');
}
                    h1,
                    h2,
                    h3,
                    h4,
                    h5,
                    h6,
                    p,
                    span,
                    div,
                    th,
                    tr,
                    td,
                    strong,
                    b {
                        font-family: "Calibri" !important;
                    }
                </style>

                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <t t-set="address">
                    <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;vat&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                </t>
                <t t-if="o.dest_address_id">
                    <t t-set="information_block">
                        <strong>Ship To:</strong>
                        <div t-if="o.dest_address_id">
                            <div t-field="o.dest_address_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}" name="purchase_shipping_address"/>
                        </div>

                    </t>
                </t>

                <div class="" style="">
                    <div class="row">
                        <div class="col-3">
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="height: 120px; width: 320px; justify-content: center; text-align: center;" alt="Logo"/>
                        </div>
                        <div class="col-3"/>
                        <div class="col-6">
                            <h2 style="margin-top: -15px; padding-bottom: 22px; font-family: 'Calibri';">
                                <p style="font-size: 31.25px; font-family: 'Calibri';" t-if="o.state == 'draft'">Request for Quotation</p>
                                <p style="font-size: 31.25px; font-family: 'Calibri';" t-if="o.state in ['sent', 'to approve']">Purchase Order</p>
                                <p style="font-size: 31.25px; font-family: 'Calibri';" t-if="o.state in ['purchase', 'done']">Purchase Order</p>
                                <p style="font-size: 31.25px; font-family: 'Calibri';" t-if="o.state == 'cancel'">Cancelled Purchase Order #<span t-field="o.name"/></p>
                            </h2>

                            <div style="padding: 12px 0px;"/>
                            <div class="row">
                                <div class="col-5">
                                    <div style="font-family: 'Calibri';">
                                        <h6 style="font-size: 13.12px; font-family: 'Calibri'; margin-left: 15px; padding: 0px; margin-bottom: 5px; font-weight: bold; line-height: 13.12px;">Date</h6>	
                                        <h6 style="font-size: 13.12px; font-family: 'Calibri'; margin-left: 15px; padding: 0px; margin-bottom: 5px; font-weight: bold; line-height: 13.12px;">Purchase Order No.</h6>
                                    </div>
                                </div>
                                <div class="col-7" style="padding-left: 7px;">
                                    <div>
                                        <t t-if="o.state == 'draft'"><p style="font-size: 13.12px; font-family: 'Calibri'; line-height: 13.12px; padding: 0px; margin-bottom: 5px;" t-esc="o.date_order" t-options="{'widget':'date','format': 'dd/MM/YYYY'}"/></t>
                                        <t t-else=""><p style="font-size: 13.12px; font-family: 'Calibri'; line-height: 13.12px; padding: 0px; margin-bottom: 5px;" t-esc="o.date_approve" t-options="{'widget':'date','format': 'dd/MM/YYYY'}"/></t>
                                        <h6 style="font-size: 13.12px; font-family: 'Calibri'; line-height: 13.12px; padding: 0px; margin-bottom: 5px; color: #800000; font-weight: bold;" t-esc="o.name"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="page">
                    <div class="oe_structure"/>

                    <div class="row">
                        <div class="col-3">
                            <h6 style="font-size: 13.12px; margin-left: 15px; padding: 0px; margin-bottom: 5px; font-weight: bold; line-height: 13.12px;">Bill To:</h6>
                            <span style="font-family: 'Calibri'; margin-left: 15px; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px; display: block;" t-esc="o.partner_id.name"/>
                            <t t-if="o.partner_id.street">
								<span style="font-family: 'Calibri'; margin-left: 15px; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px; display: block;" t-esc="o.partner_id.street"/>                            
                            </t>
                            <t t-if="o.partner_id.street2"><span style="font-family: 'Calibri'; margin-left: 15px; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px; display: block;" t-esc="o.partner_id.street2"/></t>
                            <p style="margin-bottom: 5px; line-height: 13.12px;margin-left: 15px;">
                            	<t t-if="o.partner_id.city">
									<span style="font-family: 'Calibri'; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px;" t-esc="o.partner_id.city"/>,                            	
                            	</t>
                            	<t t-if="o.partner_id.state_id">
                            		<span style="font-family: 'Calibri'; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px;" t-esc="o.partner_id.state_id.name"/>,	
                            	</t>
                                <t t-if="o.partner_id.zip">
									<span style="font-family: 'Calibri'; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px;" t-esc="o.partner_id.zip"/>                                
                                </t>
                            </p>
                            <t t-if="o.partner_id.country_id">
                          		<span style="font-family: 'Calibri'; margin-left: 15px; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px; display: block;" t-esc="o.partner_id.country_id.name"/>  	
                            </t>
                            <t t-if="o.partner_id.phone">
                            	<span style="font-family: 'Calibri'; margin-left: 15px; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px; display: block;" t-esc="o.partner_id.phone"/>	
                            </t>
                            
                        </div>
                        <div class="col-3"/>
                        <div class="col-3">
                            <h6 style="font-size: 13.12px; margin-left: 15px; padding: 0px; margin-bottom: 5px; font-weight: bold; line-height: 13.12px;">Ship To:</h6>
                            <span style="font-family: 'Calibri'; margin-left: 15px; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px; display: block;" t-esc="o.company_id.partner_id.name"/>
                            <t t-if="o.company_id.partner_id.street">
                          		<span style="font-family: 'Calibri'; margin-left: 15px; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px; display: block;" t-esc="o.company_id.partner_id.street"/>  
                            </t>
                            <t t-if="o.company_id.partner_id.street2"><span style="font-family: 'Calibri'; margin-left: 15px; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px; display: block;" t-esc="o.company_id.partner_id.street2"/></t>
                            <p style="margin-bottom: 5px; line-height: 13.12px;margin-left: 15px;">
                            	<t t-if="o.company_id.partner_id.city">
                            		<span style="font-family: 'Calibri'; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px;" t-esc="o.company_id.partner_id.city"/>,	
                            	</t>
                                <t t-if="o.company_id.partner_id.state_id">
                                	<span style="font-family: 'Calibri'; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px;" t-esc="o.company_id.partner_id.state_id.name"/>,	
                                </t>
                                <t t-if="o.company_id.partner_id.zip">
									<span style="font-family: 'Calibri'; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px;" t-esc="o.company_id.partner_id.zip"/>                                
                                </t>
                            </p>
                            <t t-if="o.company_id.partner_id.country_id">
                            	<span style="font-family: 'Calibri'; margin-left: 15px; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px; display: block;" t-esc="o.company_id.partner_id.country_id.name"/>
                            </t>
                            <t t-if="o.company_id.partner_id.phone">
                            	<span style="font-family: 'Calibri'; margin-left: 15px; line-height: 13.12px; font-size: 13.12px; margin-bottom: 5px; display: block;" t-esc="o.company_id.partner_id.phone"/>
                            </t>
                            
                        
                    	</div>
                    	<div class="col-3"/>
                   </div> 

                   <div class="row">
                        <span>GDI General Term / Ketentuan Umum GDI</span>
                        <br />
                        <a href="https://files.jti.com/pages/TC/TC_JTI_Indonesia_EN_IND.pdf">
                            https://files.jti.com/pages/TC/TC_JTI_Indonesia_EN_IND.pdf
                        </a>
                        <br />
                        <br />
                        <span>GDI Billing Procedure / Prosedur Penagihan</span>
                        <br />
                        <a href="https://files.jti.com/pages/TC/TC_JTI_Indonesia_Invoice_Submission_Process.pdf">
                            https://files.jti.com/pages/TC/TC_JTI_Indonesia_Invoice_Submission_Process.pdf
                        </a>
                   </div>

                   <div class="row" style="margin-top: 25px; ">
                        <div class="col-3">
                        	<t t-if="o.user_id">
                        		<h6 style="font-size: 13.12px; margin-left: 15px; padding: 0px; margin-bottom: 5px; font-weight: bold; line-height: 13.12px;">Purchase Representative</h6>
                        	</t>
                        	<t t-if="o.partner_ref">
                        		<h6 style="font-size: 13.12px; margin-left: 15px; padding: 0px; margin-bottom: 5px; font-weight: bold; line-height: 13.12px;">Vendor Reference</h6>
                        	</t>
                        </div>
                        <div class="col-3">
                        	<t t-if="o.user_id">
                        		<p style="font-family: 'Calibri'; line-height: 13.12px; font-size: 13.12px; padding: 0px; margin-bottom: 5px;" t-esc="o.user_id.name"/>
                        	</t>
                        	<t t-if="o.partner_ref">
                            	<p style="font-family: 'Calibri'; line-height: 13.12px; font-size: 13.12px; padding: 0px; margin-bottom: 5px;" t-esc="o.partner_ref"/>
                            </t>
                        </div>
                        <div class="col-3" style="flex: 0 0 20%; max-width: 20%;">
                        	<t t-if="o.date_planned">
                        		<h6 style="font-size: 13.12px; margin-left: 15px; padding: 0px; margin-bottom: 5px; font-weight: bold; line-height: 13.12px;">Terms Of Delivery</h6>
                        	</t>
                            <t t-if="o.payment_term_id">
                            	<h6 style="font-size: 13.12px; margin-left: 15px; padding: 0px; margin-bottom: 5px; font-weight: bold; line-height: 13.12px;">Terms Of Payment</h6>
                            </t>
                        </div>
                        <div class="col-3">
                        	<t t-if="o.incoterm_id">
                        		<p style="font-family: 'Calibri'; margin-left: 0px; line-height: 13.12px; font-size: 13.12px; padding: 0px; margin-bottom: 5px;" t-esc="o.incoterm_id.name or '' + ' - ' + o.incoterm_location or ''"/>
                        	</t>
                        	<t t-if="o.payment_term_id">
                            	<p style="font-family: 'Calibri'; margin-left: 0px; line-height: 13.12px; font-size: 13.12px; padding: 0px; margin-bottom: 5px;" t-esc="o.payment_term_id.name"/>
                            </t>
                        </div>
                    </div>
                    <br/>


                    <table class="table">
                        <thead style="display: table-row-group">
                            <tr>
                                <th name="no" style="font-family: 'Calibri'; font-size: 13.12px;" class="text-start">No</th>
                                <!-- <th name="part_no" style="font-family: 'Calibri'; font-size: 13.12px;" class="text-start">Part No.</th> -->
                                <th name="th_description" style="font-family: 'Calibri'; font-size: 13.12px;" class="text-start"><strong>Description</strong></th>
                                <!-- <th name="th_taxes" style="font-family: 'Calibri'; font-size: 13.12px;"><strong>Taxes</strong></th> -->
                                <!-- <th name="th_date_req" style="font-family: 'Calibri'; font-size: 13.12px;" class="text-center"><strong>Date Req.</strong></th> -->
                                <th name="th_quantity" style="font-family: 'Calibri'; font-size: 13.12px;" class="text-end"><strong>Qty</strong></th>
                                <!-- <th name="th_unit" style="font-family: 'Calibri'; font-size: 13.12px;" class="text-end"><strong>Unit</strong></th> -->
                                <th name="th_price_unit" style="font-family: 'Calibri'; font-size: 13.12px;" class="text-end"><strong>Unit Price</strong></th>
                                <th name="th_subtotal" style="font-family: 'Calibri'; font-size: 13.12px;" class="text-end">
                                    <strong>Total</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="num" t-value="0"/>
                            <t t-foreach="o.order_line" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>

                                <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <t t-set="num" t-value="num+1"/>
                                        <td name="td_no" style="font-family: 'Calibri'; font-size: 13.12px;"><span t-esc="num"/></td>
                                        <!-- <td name="td_internaal_ref" style="font-family: 'Calibri'; font-size: 13.12px;"><span t-field="line.product_id.default_code"/></td> -->
                                        <td id="product" style="font-family: 'Calibri'; font-size: 13.12px;">
                                            <span t-field="line.display_name"/>
                                            <br/>
                                            <t t-foreach="line.product_id.product_template_variant_value_ids" t-as="variant">
                                                <div style="white-space: nowrap;padding:4px;border:1px solid grey;border-radius:15px;display:inline-block; font-size: 11px;"><span t-field="variant.attribute_id.name"/>:<span t-field="variant.product_attribute_value_id.name"/></div>
                                            </t>
                                        </td>
                                        <!-- <td name="td_taxes" style="font-family: 'Calibri'; font-size: 13.12px;">
                                            <span t-esc="', '.join(map(lambda x: x.description or x.name, line.taxes_id))"/>
                                        </td> -->
                                        <!-- <td class="text-center" style="font-family: 'Calibri'; font-size: 13.12px;">
                                            <span t-field="line.date_planned"/>
                                        </td> -->
                                        <td class="text-end" style="font-family: 'Calibri'; font-size: 13.12px;">
                                            <span t-field="line.product_qty"/>
                                            <span t-if="line.product_packaging_id">
                                                (<span t-field="line.product_packaging_qty" t-options="{&quot;widget&quot;: &quot;integer&quot;}"/> <span t-field="line.product_packaging_id"/>)
                                            </span>
                                        </td>
                                        <!-- <td class="text-end" name="unit" style="font-family: 'Calibri'; font-size: 13.12px;">
                                            <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                        </td> -->
                                        <td class="text-end" style="font-family: 'Calibri'; font-size: 13.12px;">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td class="text-end" style="font-family: 'Calibri'; font-size: 13.12px;">
                                            <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99" id="section" style="font-family: 'Calibri'; font-size: 13.12px;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99" id="note" style="font-family: 'Calibri'; font-size: 13.12px;">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>
                                <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-end">
                                        <td colspan="99" id="subtotal" style="font-family: 'Calibri'; font-size: 13.12px;">
                                            <strong class="mr16">Subtotal</strong>
                                            <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div id="total" class="row justify-content-end" style="font-family: 'Calibri'; font-size: 13.12px;">
                        <div class="col-4">
                            <table class="table table-sm table-borderless">
                                <t t-call="purchase.document_tax_totals">
                                    <t t-set="tax_totals" t-value="o.tax_totals"/>
                                    <t t-set="currency" t-value="o.currency_id"/>
                                </t>
                            </table>
                        </div>
                    </div>

                    <p t-field="o.notes" class="mt-4"/>

                    <table style="border-collapse: collapse; width: 60%; font-size: 12px;">
                        <thead>
                          <tr>
                            <th style="border-bottom: 1px solid black;">Invoice Requirement</th>
                            <th style="border-bottom: 1px solid black;">/</th>
                            <th style="border-bottom: 1px solid black;">Persyaratan Invoice:</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td style="border-bottom: 1px solid #ccc;">Document type (Invoice; Debit Note; Credit Note) and Number</td>
                            <td style="border-bottom: 1px solid #ccc;">/</td>
                            <td style="border-bottom: 1px solid #ccc;">Tipe dokumen (<i>Invoice; Debit Note; Credit Note</i>) dan Nomor</td>
                          </tr>
                          <tr>
                            <td style="border-bottom: 1px solid #ccc;">Invoice Date</td>
                            <td style="border-bottom: 1px solid #ccc;">/</td>
                            <td style="border-bottom: 1px solid #ccc;">Tanggal Tagihan</td>
                          </tr>
                          <tr>
                            <td style="border-bottom: 1px solid #ccc;">Company Legal entity name and address</td>
                            <td style="border-bottom: 1px solid #ccc;">/</td>
                            <td style="border-bottom: 1px solid #ccc;">Nama resmi Perusahaan dan alamat</td>
                          </tr>
                          <tr>
                            <td style="border-bottom: 1px solid #ccc;">Vendor Company name and address</td>
                            <td style="border-bottom: 1px solid #ccc;">/</td>
                            <td style="border-bottom: 1px solid #ccc;">Nama Perusahaan Supplier dan alamat</td>
                          </tr>
                          <tr>
                            <td style="border-bottom: 1px solid #ccc;">Company Purchase Order number</td>
                            <td style="border-bottom: 1px solid #ccc;">/</td>
                            <td style="border-bottom: 1px solid #ccc;">Nomor <i>Purchase Order</i> Perusahaan</td>
                          </tr>
                          <tr>
                            <td style="border-bottom: 1px solid #ccc;">VAT Amount (if any)</td>
                            <td style="border-bottom: 1px solid #ccc;">/</td>
                            <td style="border-bottom: 1px solid #ccc;">Jumlah PPN (jika ada)</td>
                          </tr>
                          <tr>
                            <td style="border-bottom: 1px solid #ccc;">WHT Amount (if any)</td>
                            <td style="border-bottom: 1px solid #ccc;">/</td>
                            <td style="border-bottom: 1px solid #ccc;">Jumlah PPh (jika ada)</td>
                          </tr>
                          <tr>
                            <td style="border-bottom: 1px solid #ccc;">VAT Invoice (if any)</td>
                            <td style="border-bottom: 1px solid #ccc;">/</td>
                            <td style="border-bottom: 1px solid #ccc;">Faktur Pajak PPN (jika ada)</td>
                          </tr>
                          <tr>
                            <td style="border-bottom: 1px solid #ccc;">Bank Account Number</td>
                            <td style="border-bottom: 1px solid #ccc;">/</td>
                            <td style="border-bottom: 1px solid #ccc;">Nomor Rekening</td>
                          </tr>
                          <tr>
                            <td style="border-bottom: 1px solid #ccc;">Bank Account Holder</td>
                            <td style="border-bottom: 1px solid #ccc;">/</td>
                            <td style="border-bottom: 1px solid #ccc;">Nama Rekening penerima</td>
                          </tr>
                          <tr>
                            <td style="border-bottom: 1px solid #ccc;">Total Invoice amount</td>
                            <td style="border-bottom: 1px solid #ccc;">/</td>
                            <td style="border-bottom: 1px solid #ccc;">Total jumlah Tagihan</td>
                          </tr>
                        </tbody>
                      </table>
                      

                    <div class="oe_structure"/>

                    <br/>
                    <div class="clearfix"/>
                    <div class="clearfix row bottom_area">
                        <div class="col-8"/>
                        <div class="col-4">
                            <p style="margin-bottom: 75px; font-family: 'Calibri';">Authorized by ,</p>
                            <h6>Purchasing Executive</h6>
                        </div>
                    </div>
                </div>




                <div class="justify-content-center" style="color: 212121; padding-bottom: 11mm;">
                    <div t-if="report_type == 'pdf'" class="text-center" style="margin-top: 5px; color: 212121; font-weight: bold;">
                        <span style="font-family: 'Calibri'; line-height: 10px; font-size: 10px;">Page</span>
                        <span style="font-family: 'Calibri'; line-height: 10px; font-size: 10px; margin-bottom: 5px;" class="page"/>
                        <span style="font-family: 'Calibri'; line-height: 10px; font-size: 10px; margin-bottom: 5px;">/</span>
                        <span style="font-family: 'Calibri'; line-height: 10px; font-size: 10px; margin-bottom: 5px;" class="topage"/>
                    </div>
                </div>
                
            </t>
        </t>
    </xpath>
    </template>
</odoo>
